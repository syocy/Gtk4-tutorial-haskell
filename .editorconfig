root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{hs,lhs,hs-boot}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.cabal]
indent_style = space
indent_size = 2

[{cabal.project,cabal.project.local,package.yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
